<Page loaded="loaded">

	<Page.actionBar>
		<ActionBar title="My Scores">
		</ActionBar>
	</Page.actionBar>

	<StackLayout>
        <ListView items="{{ scoresList }}">
            <ListView.itemTemplate>
                <Label text="{{ score }}" horizontalAlignment="left" verticalAlignment="center"/>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>

</Page>